<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record model="ir.ui.view" id="openacademy_course_form_view">
        <field name="name">course.form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Courses Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="responsible_id"/>
                    </group>
                </sheet>
                <notebook>
                    <page string="Description">
                        <field name="description"/>
                    </page>
                    
                    <page string="About">
                        This is an example of notebook
                    </page>
                    
                    <page string="Courses">
                        <field name="session_ids" nolabel="1">
                            <tree string="Registered Sessions">
                                <field name="name"/>
                                <field name="instructor_id"/>
                            </tree>
                        </field>
                    </page>
                    
                </notebook>
            </form>
        </field>
    </record>
    
    <record model="ir.ui.view" id="openacademy_course_list_view">
        <field name="name">course.list</field>
        <field name="model">openacademy.course</field>
        
        <field name="arch" type="xml">
            <tree string="Courses List">
                <field name="name" string="Name Tree"/>
                <field name="description"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="openacademy_course_search_view">
        <field name="name">course.search</field>
        <field name="model">openacademy.course</field>

        <field name="arch" type="xml">
            <search string="Courses Search">
                <field name="name" string="Name search"/>
                <field name="description"/>
            </search>
        </field>

    </record>
    
    
    <record model="ir.ui.view" id="openacademy_session_form_view">
        <field name="name">openacademy.session.form</field>
        <field name="model">openacademy.session</field>
        
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="duration"/>
                        <field name="seats"/>
                        <field name="taken_seats" widget="progressbar"/>
                        <field name="instructor_id"/>
                        <field name="course_id"/>
                        <label for="attendee_ids"/>
                        <field name="attendee_ids" nolabel="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record model="ir.ui.view" id="openacademy_session_list_view">
        <field name="name">openacademy.session.list</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree string="Sessions List">
                <field name="name"/>
                <field name="start_date"/>
                <field name="duration"/>
                <field name="seats"/>
                <field name="instructor_id"/>
                <field name="course_id"/>
                <field name="taken_seats" widget="progressbar"/>
            </tree>
        </field>
    </record>
    
  
    <record model="ir.actions.act_window" id="course_list_action">
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create your firts course</p>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="session_list_action">
        <field name="name">Sessions</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create your firts Session</p>
        </field>
    </record>

    <!-- Main Menu item -->
    <menuitem name="Open Academy" id="main_openacademy_menu"/>
    <!-- Menu Level 1 -->
    <menuitem name="Open Academy" id="openacademy_menu_1" parent="main_openacademy_menu"/>
    <!-- Menu Level 2 -->  
    <menuitem name="Courses" id="openacademy_menu_2" parent="openacademy_menu_1" action="course_list_action"/>
    <menuitem name="Sessions" id="openacademy_menu_3" parent="openacademy_menu_1" action="session_list_action"/>

</odoo>
